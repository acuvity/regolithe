{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Specification",
    "description": "Represents an object with all its attributes and relations",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "model"
    ],
    "properties": {
        "attributes": {
            "$ref": "#/definitions/attributes"
        },
        "relations": {
            "type": "array",
            "description": "List of relations between the represented object and other ones.",
            "items": {
                "$ref": "#/definitions/relation"
            }
        },
        "model": {
            "$ref": "#/definitions/model"
        },
        "indexes": {
            "$ref": "#/definitions/indexes"
        },
        "default_order": {
            "$ref": "#/definitions/default_order"
        }
    },
    "definitions": {
        "indexes": {
            "title": "Indexes",
            "description": "Describes the indexes of the spec.",
            "additionalProperties": false,
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "default_order": {
            "description": "Attribute that should be used to order results if not manually provided",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "model": {
            "title": "Model",
            "description": "Holds basic information of the represented object.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "package",
                "rest_name",
                "resource_name",
                "entity_name",
                "description",
                "group"
            ],
            "properties": {
                "aliases": {
                    "description": "List of aliases to represent a specification.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "update": {
                    "$ref": "#/definitions/relationaction"
                },
                "delete": {
                    "$ref": "#/definitions/relationaction"
                },
                "description": {
                    "description": "The description of the represented object.",
                    "type": "string"
                },
                "entity_name": {
                    "description": "Camel-cased version of the rest_name.",
                    "type": "string"
                },
                "friendly_name": {
                    "description": "Friendly readable version of the rest_name.",
                    "type": "string"
                },
                "extends": {
                    "description": "List of base specification this specification extends on.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "documentation": {
                    "description": "Advanced documentation for the specification.",
                    "type": "string"
                },
                "extensions": {
                    "description": "Opaque key value pairs that can be used by compilers. Known extensions will be listed but not required properties. Any additional properties are possible.",
                    "type": "object",
                    "properties": {
                        "openapi_path": {
                            "$ref": "#/definitions/model/extensions/openapipath"
                        },
                        "openapi_component_registry": {
                            "$ref": "#/definitions/model/extensions/openapicomponentregistry"
                        }
                    },
                    "additionalProperties": true
                },
                "get": {
                    "$ref": "#/definitions/relationaction"
                },
                "package": {
                    "description": "The name of the package of the represented object.",
                    "type": "string"
                },
                "group": {
                    "description": "The group of the api.",
                    "type": "string"
                },
                "private": {
                    "description": "The represented object is private.",
                    "type": "boolean"
                },
                "resource_name": {
                    "description": "The plural version of the rest_name.",
                    "type": "string"
                },
                "rest_name": {
                    "description": "The unique name representing the object.",
                    "type": "string"
                },
                "root": {
                    "description": "The represented object acts as the root specification.",
                    "type": "boolean"
                },
                "validations": {
                    "description": "Name of a custom validation from the _validation file to apply to the object",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "detached": {
                    "description": "If true, indicates the compiler that this object is detached from the api",
                    "type": "boolean"
                }
            },
            "extensions": {
                "title": "Model Extensions",
                "description": "All known extension types for models",
                "openapipath": {
                    "title": "OpenAPI Path Extension",
                    "description": "Alternative path to use when generating the OpenAPI spec",
                    "type": "string"
                },
                "openapicomponentregistry": {
                    "title": "OpenAPI Component Registry",
                    "description": "Allows to register external types within the components of the generated OpenAPI spec which will be referenced instead of embedded in generated response return types",
                    "additionalProperties": false,
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "parameters": {
__PARAMETER__
        },
        "attributes": {
__ATTRIBUTE__
        },
        "relation": {
            "title": "Relation",
            "description": "Allows to declare a relation between two specifications.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "rest_name"
            ],
            "properties": {
                "rest_name": {
                    "description": "rest_name used as a link to the related object",
                    "type": "string"
                },
                "create": {
                    "$ref": "#/definitions/relationaction"
                },
                "delete": {
                    "$ref": "#/definitions/relationaction"
                },
                "get": {
                    "$ref": "#/definitions/relationaction"
                },
                "update": {
                    "$ref": "#/definitions/relationaction"
                },
                "extensions": {
                    "description": "Opaque key value pairs that can be used by compilers. Known extensions will be listed but not required properties. Any additional properties are possible.",
                    "type": "object",
                    "properties": {
                        "openapi_path": {
                            "$ref": "#/definitions/relation/extensions/openapipath"
                        }
                    },
                    "additionalProperties": true
                }
            },
            "extensions": {
                "title": "Relation Extensions",
                "description": "All known extension types for relations",
                "openapipath": {
                    "title": "OpenAPI Path Extension",
                    "description": "Alternative path to use when generating the OpenAPI spec",
                    "type": "string"
                }
            }
        },
        "relationaction": {
            "title": "Relation Action",
            "description": "Specification of a action of a relation.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "description"
            ],
            "properties": {
                "description": {
                    "title": "Relation Description",
                    "description": "Description of the relation.",
                    "type": "string"
                },
                "deprecated": {
                    "title": "Relation Depreciation",
                    "description": "Tells if the relation is deprecated",
                    "type": "boolean"
                },
                "global_parameters": {
                    "title": "Global Parameters References",
                    "description": "Reference to global parameters defined in the _parameters file",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "parameters": {
                    "$ref": "#/definitions/parameters"
                },
                "extensions": {
                    "description": "Opaque key value pairs that can be used by compilers. Known extensions will be listed but not required properties. Any additional properties are possible.",
                    "type": "object",
                    "properties": {
                        "openapi_response_map": {
                            "$ref": "#/definitions/relationaction/extensions/openapiresponsemap"
                        }
                    },
                    "additionalProperties": true
                }
            },
            "extensions": {
                "title": "Relation Action Extensions",
                "description": "All known extension types for relation actions",
                "openapiresponsemap": {
                    "title": "OpenAPI Response Mapping",
                    "description": "Use this map of HTTP status code to output format spec when generating OpenAPI spec",
                    "type": "object",
                    "patternProperties": {
                        "^[1-5][0-9]{2}$": {
                            "type": "object",
                            "properties": {
                                "spec": {
                                    "title": "Type Spec Name or External Type",
                                    "description": "Name of the type spec that this response maps to, or name of the external type mapping.",
                                    "type": "string"
                                },
                                "is_array": {
                                    "title": "Is Array Response",
                                    "description": "Response type is an array of type spec",
                                    "type": "boolean"
                                },
                                "description": {
                                    "title": "Response Description",
                                    "description": "Description of the response under that status code",
                                    "type": "string"
                                }
                            },
                            "required": ["spec"]
                        }
                    },
                    "additionalProperties": false
                }
            }
        }
    }
}
